# ---------------------------------------------
# KSTAR Heating Control
# ---------------------------------------------

record (bo, "$(SYS)_KSTAR_OPR_PER") {
  field(DESC, "Heating Permission Command")
  field(ZNAM, "NO")
  field(ONAM, "YES")
  field(ZSV , "MAJOR")
  field(OSV , "NO_ALARM")
}

record (bo, "$(SYS)_KSTAR_OPR_PER_LAMP") {
  field(DESC, "Heating Permission Status")
  field(ZNAM, "NO")
  field(ONAM, "YES")
  field(ZSV , "MAJOR")
  field(OSV , "NO_ALARM")
}

record (bo, "$(SYS)_KSTAR_OPR_RDY") {
  field(DESC, "Heating Ready Command")
  field(ZNAM, "NOT READY")
  field(ONAM, "READY")
  field(ZSV , "MAJOR")
  field(OSV , "NO_ALARM")
}

record (bo, "$(SYS)_KSTAR_OPR_RDY_LAMP") {
  field(DESC, "Heating Ready Status")
  field(ZNAM, "NOT READY")
  field(ONAM, "READY")
  field(ZSV , "MAJOR")
  field(OSV , "NO_ALARM")
}

