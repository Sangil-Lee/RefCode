record(calc, "$(PV_NAME)_IN") {
  field(CALC, "A")
  field(INPA, "$(PV_NAME_INP) CPP")
  field(INPB, "HDS_HCS_R_REMOTE CPP")
  field(FLNK, "$(PV_NAME)")
}


record(bo, "$(PV_NAME)") {
  field(DTYP, "S7plc")
  field(OUT, "@HCS_PLC/$(BYTE) B=$(BIT)")
  field(DOL, "$(PV_NAME)_IN")
  field(ZNAM,"OFF")
  field(ONAM,"ON")
  field(OMSL, "closed_loop")
}
