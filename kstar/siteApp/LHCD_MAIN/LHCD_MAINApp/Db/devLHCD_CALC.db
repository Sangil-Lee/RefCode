record(bi, "LH1_ALLDAQ_READY")
{
    field(DESC, "ALL_DAQ_READY")
    field(SCAN, "Passive")
    field(INP, "LH1_ALLDAQ_READY_C.VAL CPP")
    field(ZSV, "NO_ALARM")
    field(OSV, "MAJOR")
}
record(calc, "LH1_ALLDAQ_READY_C")
{
    field(DESC, "ALL DAQ READY")
    field(SCAN, "Passive")
	field(CALC, "(A||B||C)?1:0")
    field(INPA, "LH1_DAQ_RD_STATUS.VAL CPP NMP")
	field(INPB, "LH1_RFK_DAQRDY_RTN.VAL CPP NMP")
	field(INPC, "LH1_RFANT_DAQRDY_RTN.VAL CPP NMP")
}

