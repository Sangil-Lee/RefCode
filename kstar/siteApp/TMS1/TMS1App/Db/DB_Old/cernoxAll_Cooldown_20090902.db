record(ai, "$(REC)_T")
{
        field(DESC, "$(DESC)")
        field(DTYP, "PXISCXI Cernox Channel")
        field(INP, "@$(TASK) $(CHAN) $(SERIAL)")
        field(SCAN, ".5 second")
        field(PREC, "2")
        field(EGU, "K")
        field(MDEL, "0.0")
        field(ADEL, "0.0")
}
##### DT1 is Temperature difference (D-B) or (D-C) for Cool-down stages #######
record(calc, $(REC)_DT1) {
  field(SCAN, "1 second")
  field(CALC, "A<3?(D-B):(D-C)")
  field(INPA, "TMS_CCS_OPST_CW_STAGE CPP NMS")
  field(INPB, "$(IN1) NPP NMS")
  field(INPC, "$(IN2) NPP NMS")
  field(INPD, "$(REC)_T.VAL CPP NMS")
  field(HIHI, "$(HIHI1)")
  field(LOLO, "$(LOLO1)")
  field(HIGH, "$(HIGH1)")
  field(LOW, "$(LOW1)")
  field(HHSV, "MAJOR")
  field(LLSV, "MAJOR")
  field(HSV, "MINOR")
  field(LSV, "MINOR")
  field(PREC, "2")
  field(EGU, "K")
}
##### DT2 is Temperature difference (D-C) for Experiment stages #######
record(calc, $(REC)_DT2) {
  field(SCAN, "1 second")
  field(CALC, "A>3?(D-C):0")
  field(INPA, "TMS_CCS_OPST_CW_STAGE CPP NMS")
#  field(INPB, "$(IN1) NPP NMS")
  field(INPC, "$(IN2) NPP NMS")
  field(INPD, "$(REC)_T.VAL CPP NMS")
  field(HIHI, "$(HIHI2)")
  field(LOLO, "$(LOLO2)")
  field(HIGH, "$(HIGH2)")
  field(LOW, "$(LOW2)")
  field(HHSV, "MAJOR")
  field(LLSV, "MAJOR")
  field(HSV, "MINOR")
  field(LSV, "MINOR")
  field(PREC, "2")
  field(EGU, "K")
}
record(calc, $(REC)) {
  field(SCAN, "1 second")
  field(CALC, "A")
  field(INPA, "$(REC)_T.VAL NPP NMS")
  field(INPB, "$(REC)_DT1.VAL NPP NMS")
  field(INPC, "$(REC)_DT2.VAL NPP NMS")
  field(PREC, "2")
  field(EGU, "K")
  field(MDEL, "0.0")
  field(ADEL, "0.0")
}


