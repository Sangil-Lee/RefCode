record(ai, "$(PV)_T_MAX")
{
	field(DESC, "$(PV)_T max")
	field(SCAN, "Passive")
	field(INP, "0")
	field(PINI, "YES")
  	field(PREC, "2")
	field(EGU, "K")
        field(MDEL, "0")
        field(ADEL, "0")
}
record(stringin, "$(PV)_T_MAX_PV")
{
	field(VAL, "")
	field(DESC, "$(PV)_T max pv")
}
