record(ai, "$(REC)_RVAL")
{
       	      field(DESC, "$(DESC)")
	      field(DTYP, "PXISCXI Raw Reading")
              field(INP, "@$(TASK) $(CHAN)")
              field(SCAN, "I/O Intr")
              field(PREC, "6")
              field(EGU, "mV")
}
record(ao, "$(REC)_ZVAL")
{
       	      field(DESC, "Displacement Zero Set")
              field(SCAN, "Passive")
              field(VAL, "0.0")
              field(EGU, "mV")
}
record(calc, "$(REC)_AVAL")
{
	      field(DESC, "$(DESC)")
	      field(SCAN, "Passive")
	      field(CALC, "(A*2.E+6/(6.5*$(SLOPE)))")
	      field(INPA, "$(REC)_RVAL CPP NMS")
	      field(EGU, "mm")
	      field(HIHI, "2")
              field(HIGH, "1")
              field(LOW,  "-1")
              field(LOLO, "-2")
              field(HHSV, "MAJOR")
              field(HSV, "MINOR")
              field(LSV, "MINOR")
              field(LLSV, "MAJOR")
	      field(PREC, "4")
}
record(calc, "$(REC)_D")
{
	      field(DESC, "$(DESC)_ZERO_SET")
	      field(SCAN, "Passive")
	      field(CALC, "(A*2.E+6/(6.5*$(SLOPE))-B)")
	      field(INPA, "$(REC)_RVAL CPP NMS")
	      field(INPB, "$(REC)_ZVAL NPP NMS")
	      field(EGU, "mm")
	      field(PREC, "4")
}
##### DT1 is Displacement Min Data of 4 signal, difference (D-B) or (D-C) for Cool-down stages #######
record(calc, $(REC)_DT1) {
  field(SCAN, "Passive")
  field(CALC, "A<4?(D-B):D")
  field(INPA, "TMS_CCS_OPST_CW_STAGE CPP NMS")
  field(INPB, "$(IN1) NPP NMS")
  field(INPD, "$(REC)_D.VAL CPP NMS")
  field(HIHI, "$(HIHI1)")
  field(LOLO, "$(LOLO1)")
  field(HIGH, "$(HIGH1)")
  field(LOW, "$(LOW1)")
  field(HHSV, "MAJOR")
  field(LLSV, "MAJOR")
  field(HSV, "MINOR")
  field(LSV, "MINOR")
  field(PREC, "4")
  field(EGU, "mm")
}
record(calc, $(REC)) {
  field(SCAN, "Passive")
  field(CALC, "A")
  field(INPA, "$(REC)_D.VAL CPP NMS")
  field(INPB, "$(REC)_DT1.VAL NPP MS")
  field(EGU, "mm")
  field(PREC, "4")
}
record(bi, "TMS_DHS_ZERO_SETTING")
{
        field(DESC, "TMS_DHS_ZERO_SETTING")
        field(SCAN, "Passive")
        field(ZNAM, "0")
        field(ONAM, "1")
        field(ZSV, "NO_ALARM")
        field(OSV, "MAJOR")
}
